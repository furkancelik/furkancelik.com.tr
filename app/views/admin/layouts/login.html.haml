!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/

    %title FurkanCelikComTR Giriş

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true

    /Bootstrap
    %link{href:"/assets/backend/css/bootstrap.min.css",rel:"stylesheet"}
    %link{href:"/assets/backend/css/bootstrap-theme.min.css",rel:"stylesheet"}/
    %link{href:"/assets/backend/css/signin.css",rel:"stylesheet"}/

    /HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    /WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
    %script{:src => "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
    %script{:src => "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}
    = csrf_meta_tags
  %body
    .container
      = form_tag("/admin/login", method: "post",class:"form-signin") do
        %h2.form-signin-heading Yönetim Paneli
        %label.sr-only Kullanıcı Adı
        %input.form-control{name:"username",placeholder:"Kullanıcı Adı"}
        %label.sr-only Şifre
        %input.form-control{name:"password",type:"password",placeholder:"Şifre"}
        %button.btn.btn-lg.btn-primary.btn-block{type:"submit"}
          Giriş Yap
        %br
        = render "admin/layouts/flash_error"




    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{src:"/assets/backend/js/bootstrap.min.js"}

